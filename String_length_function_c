
//finding the length of the string without function

#include<stdio.h>
#include<string.h>

int stringLength(char s[])
{
    int i=0;
    while(s[i]!='\0')
    {
        i++;
    }
    return i;
}

//main function

int main()
{
    char str[100];
    
    printf("Enter the String:-\n");
    gets(str);
    
    int length;
    length=stringLength(str);
    
    printf("The Length of the String is:- %d\n",length );
    
    return 0;
}
