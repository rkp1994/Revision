// The code implemantation of the linear search  algorithm
#include<stdio.h>
int linear_search(int arr[], int n,int x)
{
    int i;
    for (i=0;i<n;i++)
    {
        if(arr[i]==x)
        return i;
    }
    return -1;
}

int main()
{
    int array[]={1,2,3,4,5,6};
    int res;
    res=linear_search(array,6,41);
    if(res==-1)
       printf("The Number is not present in the array\n");
       else
       printf("The Number is present in the array\n");
       return 0;
}

